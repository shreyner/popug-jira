{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/event-schemas/*": ["event-schemas/*"],
      "@app/event-schema-registry": ["libs/event-schema-registry/src"],
      "@app/event-schema-registry/*": ["libs/event-schema-registry/src/*"]
    }
  }
}
